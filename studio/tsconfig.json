{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],                      // General alias for src
      "@/components/*": ["studio/components/*"] // Correct path for components
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "studio/components/**/*.tsx"],
  "exclude": ["node_modules"]
}
